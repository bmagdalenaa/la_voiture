<div class="container mt-5">
  <h1 class="fw-bold mb-4">Manufacturers</h1>

  <div class="mb-3">
    <p class="lead">
      Explore manufacturers and click on a name to view more details. Use the buttons below to filter manufacturers alphabetically.
      Click on a letter or 'All' to view manufacturers starting with that letter.
    </p>

     <!-- Desktop layout: horizontal button group -->
    <div class="btn-group d-none d-md-flex flex-md-wrap mb-3" role="group" aria-label="Alphabet filter">
      <a href="<%= manufacturer_index_path %>" class="btn <%= 'active' unless params[:letter].present? %>">All</a>
      <% ('A'..'Z').each do |letter| %>
        <a href="<%= manufacturer_index_path(letter: letter) %>" class="btn <%= 'active' if params[:letter] == letter %>"><%= letter %></a>
      <% end %>
    </div>

    <!-- Mobile layout: horizontal scrollable list -->
    <div class="d-flex d-md-none overflow-auto mb-3">
      <a href="<%= manufacturer_index_path %>" class="btn btn-outline-primary <%= 'active' unless params[:letter].present? %> me-1">All</a>
      <% ('A'..'Z').each do |letter| %>
        <a href="<%= manufacturer_index_path(letter: letter) %>" class="btn btn-outline-primary <%= 'active' if params[:letter] == letter %> me-1"><%= letter %></a>
      <% end %>
    </div>
  </div>

  <% if @no_entries_message %>
    <div class="alert alert-warning">
      <%= @no_entries_message %>
    </div>
  <% end %>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @manufacturers.each do |manufacturer| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= link_to manufacturer.manufacturer_name, manufacturer, class: 'text-decoration-none text-dark' %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= paginate @manufacturers %>
  </div>
</div>